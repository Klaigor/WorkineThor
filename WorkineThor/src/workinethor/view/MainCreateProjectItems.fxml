<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="workinethor.view.MainCreateProjectController">
   <top>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="73.0" prefWidth="427.0" text="Create Project" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font size="50.0" />
         </font>
      </Label>
   </top>
   <bottom>
      <AnchorPane prefHeight="70.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="Next" defaultButton="true" layoutX="621.0" layoutY="7.0" mnemonicParsing="false" onAction="#goNext" prefHeight="57.0" prefWidth="134.0" text="Next">
               <font>
                  <Font size="30.0" />
               </font></Button>
         </children>
      </AnchorPane>
   </bottom>
   <center>
      <AnchorPane prefHeight="362.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <CheckBox fx:id="DriveBox" layoutX="358.0" layoutY="189.0" mnemonicParsing="false" onAction="#DriveBoxYes" prefHeight="0.0" prefWidth="0.0" />
            <Label layoutX="127.0" layoutY="178.0" prefHeight="39.0" prefWidth="91.0" text="Drive:">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label layoutX="127.0" layoutY="90.0" prefHeight="32.0" prefWidth="152.0" text="Project Name:">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="ProjectNameField" layoutX="358.0" layoutY="87.0" onKeyReleased="#nextYes" prefHeight="38.0" prefWidth="262.0" promptText="Insert Project Name">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <ChoiceBox fx:id="DriveSelector" layoutX="443.0" layoutY="183.0" onDragDetected="#initialize" prefHeight="30.0" prefWidth="177.0">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets></ChoiceBox>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
